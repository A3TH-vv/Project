import telebot
from telebot.apihelper import send_message, set_message_reaction
import random

bot_token = '–¢–æ–∫–µ–Ω –±–æ—Ç–∞'


bot = telebot.TeleBot(bot_token)

# responses = [
#     "–ü—Ä–∏–≤—ñ—Ç! –Ø–∫ —Å–ø—Ä–∞–≤–∏?",
#     "–ì–∞—Ä–Ω–∏–π –¥–µ–Ω—å –¥–ª—è —á–∞—Ç—É, –ø—Ä–∞–≤–¥–∞?",
#     "–©–æ —Ü—ñ–∫–∞–≤–æ–≥–æ —Ä–æ–∑–∫–∞–∂–µ—à?",
#     "–Ø —Ç—É—Ç, —â–æ–± –≤—ñ–¥–ø–æ–≤—ñ–¥–∞—Ç–∏ –Ω–∞ —Ç–≤–æ—ó –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è!",
#     "–¶—ñ–∫–∞–≤–æ, –∞ —Ç–∏ –ª—é–±–∏—à –∂–∞—Ä—Ç–∏? üòÉ"
# ]
#–í—ñ–¥–ø–æ–≤—ñ–¥—ñ –¥–æ –¥—Ä—É–≥–æ–≥–æ –∑–∞–≤–¥–∞–Ω–Ω—è

@bot.message_handler(commands=['—Å—Ç–∞–Ω_—Å–ø—Ä–∞–≤', '–∂–∞—Ä—Ç', '–ø—Ä–∏–≤—ñ—Ç–∞–Ω–Ω—è', '–¥–æ–ø–æ–º–æ–≥–∞', '–ø—Ä–æ—â–∞–Ω–Ω—è'])
def get_commands(message):
    if message.text == '/–ø—Ä–∏–≤—ñ—Ç–∞–Ω–Ω—è':
        bot.send_message(message.chat.id, "–ü—Ä–∏–≤—ñ—Ç! –Ø–∫ —Å–ø—Ä–∞–≤–∏? üòä")
    elif  message.text == '/—Å—Ç–∞–Ω_—Å–ø—Ä–∞–≤':
        bot.send_message(message.chat.id, "–Ø–∫ –Ω–∞—Å—Ç—Ä—ñ–π? –ß–∏–º –∑–∞–π–º–∞—î—à—Å—è?")
    elif message.text == '/–∂–∞—Ä—Ç':
        bot.send_message(message.chat.id, "–ß–æ–º—É —Ç–æ–º–∞—Ç–∏ –Ω—ñ–∫–æ–ª–∏ –Ω–µ –≤–∏–≥—Ä–∞—é—Ç—å —É –ø–µ—Ä–µ–≥–æ–Ω–∞—Ö? –ë–æ –≤–æ–Ω–∏ –∑–∞–≤–∂–¥–∏ –ø–µ—Ä–µ—Ç–≤–æ—Ä—é—é—Ç—å—Å—è –Ω–∞ –∫–µ—Ç—á—É–ø! üçÖüòÜ")
    elif message.text == '/–¥–æ–ø–æ–º–æ–≥–∞':
        bot.send_message(message.chat.id, "–ß–∏–º –º–æ–∂—É –¥–æ–ø–æ–º–æ–≥—Ç–∏? –ü–∏—Ç–∞–π, –Ω–µ —Å–æ—Ä–æ–º—Å—è!")
    elif message.text == '/–ø—Ä–æ—â–∞–Ω–Ω—è':
        bot.send_message(message.chat.id, "–ë—É–≤–∞–π! –ì–∞—Ä–Ω–æ–≥–æ –¥–Ω—è —ñ –±–µ–∑–±–∞–≥–æ–≤–æ–≥–æ –∫–æ–¥—É! üòÑüöÄ")


# @bot.message_handler(content_types='text')
# def handle_text(message):
#     response = random.choice(responses)
#     bot.send_message(message.chat.id, response)


RESPONSES_FILE = 'responses.txt'


@bot.message_handler(content_types='text')
def handle_text(message):
    with open(RESPONSES_FILE, 'r', encoding='utf-8') as file:
        responses = [line.strip() for line in file if line.strip()]

    response = random.choice(responses)
    bot.send_message(message.chat.id, response)










bot.polling()
